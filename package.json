{
  "name": "nextjs-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "build": "cross-env NODE_ENV=production next build client",
    "serve": "cross-env NODE_ENV=production node ./index.js",
    "start": "npm run build && npm run serve",
    "start:dev": "cross-env NODE_ENV=development LOGGER_LEVEL=debug nodemon ./index.js",
    "lint": "eslint \"client/**/*.js\"",
    "test": "cross-env LOGGER_ENABLED=false jest --coverage",
    "precommit": "yarn lint",
    "prepush": "yarn test"
  },
  "dependencies": {
    "body-parser": "~1.17.1",
    "classnames": "^2.2.5",
    "cross-env": "^5.0.0",
    "express": "~4.15.2",
    "joi": "^10.5.0",
    "next": "^4.4.0-canary.3",
    "next-redux-wrapper": "^1.3.4",
    "prop-types": "^15.5.10",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-redux": "^5.0.5",
    "recompose": "^0.26.0",
    "redux": "^3.7.1",
    "redux-form": "^7.0.0",
    "redux-promise-middleware": "^4.3.0",
    "redux-thunk": "^2.2.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.6.1",
    "eslint-plugin-jest": "^20.0.3",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-react": "^7.1.0",
    "husky": "^0.13.3",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.{js}",
      "!**/node_modules/**"
    ],
    "moduleDirectories": [
      "node_modules",
      "app"
    ],
    "roots": [
      "./app"
    ],
    "resetModules": true,
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/__mocks__/"
    ]
  }
}
